{
    "name": "microweber/microweber",
    "type": "application",
    "description": "New generation of CMS with drag and drop",
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.microweber.com/"
        }
    ],


    "require": {
        "php": ">=5.3.2",
        "microweber/installers": "1.0.*@dev",
        "components/jquery": "1.9.*",
        "components/jqueryui": "*",
        "components/rangy": "*",

        "components/bootstrap": "dev-master",
    


        "pimple/pimple": "*",

        "prewk/xml-streamer": "dev-master",
        "keboola/csv": "dev-master"

    },
    "autoload": {
        "psr-0": {
            "Microweber": "src/"
        }
    },


    "config": {
        "preferred-install": "dist"
    },
    "keywords": ["cms", "drag and drop", "shop", "blog"],
    "homepage": "http://microweber.com",
    "license": "Apache-2.0",
    "support": {
        "email": "support@microweber.com",
        "irc": "irc://irc.freenode.org/microweber"
    },
    "authors": [
        {
            "name": "Peter Ivanov",
            "email": "peter@microweber.com",
            "role": "Developer"
        },
        {
            "name": "Boris Sokolov",
            "email": "boris@microweber.com",
            "role": "Designer"
        },
        {
            "name": "Alexander Raykov",
            "email": "alex@microweber.com",
            "role": "Developer"
        }
    ]
}